<% if @record.errors.any? %>
  $('#message-area-<%= @record.id %>').html("<%= j(render partial: 'layouts/error_messages', locals: { model: @record }) %>")
<% else %>
  $('#count_button_<%= @record.id %>').html("<%= j(render partial: 'count_records/count', locals: { record: @record }) %>")
  $('#cumlative_value_<%= @record.id %>').html("<%= j(render partial: 'setting_records/cumlative_value', locals: { record: @record }) %>")
  $('#message-area-<%= @record.id %>').html('')
<% end %>